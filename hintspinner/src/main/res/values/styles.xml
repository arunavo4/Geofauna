<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Spinner-->
    <style name="Spinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:theme">@style/mySpinnerItemStyle</item>
        <item name="android:textAppearance">@style/TextView</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ThemeSpinner">
        <!-- Color when pressed -->
        <item name="colorAccent">#ffa000</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">#ffc107</item>
    </style>

    <style name="TextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>