<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/card_padding"
    android:layout_marginTop="@dimen/spacer_2dp"
    android:layout_marginBottom="@dimen/spacer_2dp"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="false"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacer_4dp"
        android:paddingStart="@dimen/spacer_16dp"
        android:paddingEnd="@dimen/spacer_16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacer_16dp"
                android:textAppearance="@style/TextViewMedium"
                android:text="@string/Unique_Survey_Id"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/HintTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/unique_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextView"
                    android:hint="@string/Unique_Survey_Id" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacer_16dp"
                android:textAppearance="@style/TextViewMedium"
                android:text="@string/Serial_no"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/HintTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/serial_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextView"
                    android:hint="@string/Serial_no" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacer_16dp"
                android:textAppearance="@style/TextViewMedium"
                android:text="@string/Locality"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/HintTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/locality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextView"
                    android:hint="@string/Locality" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacer_16dp"
                android:textAppearance="@style/TextViewMedium"
                android:text="@string/State"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/state_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    app:popupTextAlignment="center"
                    app:arrowDrawable="@drawable/ic_outline_arrow_drop_down_24px"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacer_1dp"
                    android:layout_marginStart="@dimen/spacer_4dp"
                    android:layout_marginEnd="@dimen/spacer_4dp"
                    android:layout_marginTop="@dimen/spacer_0dp"
                    android:layout_marginBottom="@dimen/spacer_8dp"
                    android:background="@color/colorBlack34alpha"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacer_16dp"
                android:textAppearance="@style/TextViewMedium"
                android:text="@string/Collector"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/HintTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/collector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextView"
                    android:hint="@string/Collector" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacer_16dp"
                android:textAppearance="@style/TextViewMedium"
                android:text="@string/Habitat"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/habitat_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    app:popupTextAlignment="center"
                    app:arrowDrawable="@drawable/ic_outline_arrow_drop_down_24px"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacer_1dp"
                    android:layout_marginStart="@dimen/spacer_4dp"
                    android:layout_marginEnd="@dimen/spacer_4dp"
                    android:layout_marginTop="@dimen/spacer_0dp"
                    android:layout_marginBottom="@dimen/spacer_8dp"
                    android:background="@color/colorBlack34alpha"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacer_16dp"
                android:textAppearance="@style/TextViewMedium"
                android:text="@string/Entomofauna"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/entomofauna_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    app:popupTextAlignment="center"
                    app:arrowDrawable="@drawable/ic_outline_arrow_drop_down_24px"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacer_1dp"
                    android:layout_marginStart="@dimen/spacer_4dp"
                    android:layout_marginEnd="@dimen/spacer_4dp"
                    android:layout_marginTop="@dimen/spacer_0dp"
                    android:layout_marginBottom="@dimen/spacer_8dp"
                    android:background="@color/colorBlack34alpha"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacer_16dp"
                android:textAppearance="@style/TextViewMedium"
                android:text="@string/Other_Invertebrate"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/otherInvertebrate_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    app:popupTextAlignment="center"
                    app:arrowDrawable="@drawable/ic_outline_arrow_drop_down_24px"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacer_1dp"
                    android:layout_marginStart="@dimen/spacer_4dp"
                    android:layout_marginEnd="@dimen/spacer_4dp"
                    android:layout_marginTop="@dimen/spacer_0dp"
                    android:layout_marginBottom="@dimen/spacer_8dp"
                    android:background="@color/colorBlack34alpha"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacer_16dp"
                android:textAppearance="@style/TextViewMedium"
                android:text="@string/Vertebrate"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/vertebrate_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    app:popupTextAlignment="center"
                    app:arrowDrawable="@drawable/ic_outline_arrow_drop_down_24px"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacer_1dp"
                    android:layout_marginStart="@dimen/spacer_4dp"
                    android:layout_marginEnd="@dimen/spacer_4dp"
                    android:layout_marginTop="@dimen/spacer_0dp"
                    android:layout_marginBottom="@dimen/spacer_8dp"
                    android:background="@color/colorBlack34alpha"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacer_16dp"
                android:textAppearance="@style/TextViewMedium"
                android:text="@string/NoOfExamples"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/examples_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textAppearance="@style/TextView"
                    app:popupTextAlignment="center"
                    app:arrowDrawable="@drawable/ic_outline_arrow_drop_down_24px"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacer_1dp"
                    android:layout_marginStart="@dimen/spacer_4dp"
                    android:layout_marginEnd="@dimen/spacer_4dp"
                    android:layout_marginTop="@dimen/spacer_0dp"
                    android:layout_marginBottom="@dimen/spacer_8dp"
                    android:background="@color/colorBlack34alpha"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacer_16dp"
                android:textAppearance="@style/TextViewMedium"
                android:text="@string/Temperature"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/HintTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextView"
                    android:hint="@string/Temperature" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacer_12dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/spacer_16dp"
                android:textAppearance="@style/TextViewMedium"
                android:text="@string/Humidity"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/HintTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/humidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextView"
                    android:hint="@string/Humidity" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>