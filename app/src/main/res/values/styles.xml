<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Splash Theme-->
    <style name="AppTheme.SplashActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:navigationBarColor">@color/colorTransparent</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="AppTheme">
        <!--Text color of the Title-->
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <!--The menu icon color-->
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <!--color of the other icons in toolbar-->
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ToolBarStyle.one" parent="AppTheme">
        <!--Text color of the Title-->
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <!--The menu icon color-->
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <!--color of the other icons in toolbar-->
        <!--<item name="android:tint">@color/colorWhite</item>-->
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!--Spinner-->
    <style name="Spinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:theme">@style/mySpinnerItemStyle</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAppearance">@style/TextView</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ThemeSpinner">
        <!-- Color when pressed -->
        <item name="colorAccent">#ffa000</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">#ffc107</item>
    </style>

    <!--Form-Details-Card-->
    <style name="FormTextViewBold">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView.Hint" parent="Widget.Design.TextInputLayout">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColorHint">@color/colorMaterialBlack_no_alpha</item>
        <item name="android:textSize">14sp</item>
        <item name="hintTextAppearance">@style/HintTextView</item>
    </style>

    <style name="HintTextView" parent="TextAppearance.Design.Hint">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/greyDark_alpha80</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HintTextView.Small" parent="HintTextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HintTextView.Light" parent="HintTextView">
        <item name="android:textColor">@color/colorMaterialBlack</item>
        <item name="android:textColorHint">@color/colorMaterialBlack</item>
    </style>

    <style name="HintTextView.Large" parent="HintTextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HeadTextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorMaterialBlack_no_alpha</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HeadTextView.Light" parent="HeadTextView">
        <item name="android:textColor">@color/greyDark_alpha80</item>
    </style>

    <style name="TextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorMaterialBlack_no_alpha</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.Small" parent="TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorMaterialBlack_no_alpha</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!--Geo-Tag Styles-->
    <style name="HeadTextViewRegular">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/greyDark_alpha80</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HeadTextViewMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorMaterialBlack_no_alpha</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
